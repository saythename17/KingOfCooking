<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">
    <LinearLayout
        android:id="@+id/titlelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title"
            android:layout_marginLeft="32dp"
            android:layout_width="0dp"
            android:layout_weight="8.5"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="reailt 맛있는 요리"
            android:fontFamily="@font/mapoflowerisland"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/delete"
        android:layout_marginRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/delete"
        android:clickable="true"/>
    <ImageView
        android:id="@+id/correct"
        android:layout_toLeftOf="@id/delete"
        android:layout_marginRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pen"
        android:clickable="true"/>
    <ImageView
        android:id="@+id/recipe_iv"
        android:layout_below="@id/titlelayout"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/checklist"
        android:orientation="vertical"
        android:layout_marginHorizontal="32dp"
        android:layout_below="@id/recipe_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        android:fontFamily="@font/mapoflowerisland"/>
    <TextView
        android:id="@+id/date"
        android:layout_marginHorizontal="16dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/checklist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-01-01"
        android:textSize="16dp"
        android:fontFamily="@font/cafe24oneprettynight"/>

    <TextView
        android:layout_below="@id/date"
        android:layout_marginVertical="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6FFF"
        android:textSize="2sp"/>


</RelativeLayout>