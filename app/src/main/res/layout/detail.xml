<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_main"
    tools:context=".recipe.RecipeDetail">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/detail_image"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/food2" />

        <ImageView
            android:id="@+id/detail_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:clickable="true"
            android:onClick="back"/>
        <View
            android:layout_below="@id/detail_image"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#636363"/>
        <ImageView
            android:id="@+id/detail_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:onClick="back"/>
        <ImageView
            android:id="@+id/recipe_marker"
            android:layout_below="@id/detail_image"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_marker_white"/>
        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@id/recipe_marker"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/detail_image"
            android:text="초계국수"
            android:layout_margin="16dp"
            android:fontFamily="@font/title"
            android:textSize="32sp"
            android:textColor="@color/colorText"/>

        <TextView
            android:id="@+id/recipe_kcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipe_title"
            android:text="380kcal"
            android:layout_alignRight="@id/recipe_title"
            android:layout_marginTop="-16dp"
            android:fontFamily="@font/cafe24oneprettynight"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/colorGray"/>
        <TextView
            android:id="@+id/ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipe_kcal"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="40dp"
            android:shadowRadius="8.0"
            android:shadowDx="8.0"
            android:shadowDy="5.0"
            android:shadowColor="@color/colorGray"
            android:fontFamily="@font/cafe24oneprettynight"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:text="&lt; 재료 &gt;"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_ingredient"
            android:paddingTop="16dp"
            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            android:orientation="vertical"
            android:layout_below="@id/ingredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/line"
            android:layout_below="@id/list_ingredient"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorGray"
            android:layout_marginVertical="24dp"
            android:layout_marginHorizontal="16dp"/>
        <TextView
            android:id="@+id/method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:shadowRadius="8.0"
            android:shadowDx="8.0"
            android:shadowDy="5.0"
            android:shadowColor="@color/colorGray"
            android:fontFamily="@font/cafe24oneprettynight"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:text="&lt; 만드는 법 &gt;"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recipe_manual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_below="@id/method"/>

    </RelativeLayout>


</ScrollView>