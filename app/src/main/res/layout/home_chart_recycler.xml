<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="160dp"
    >
    <ImageView
        android:id="@+id/chart_iv"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@android:color/holo_orange_light"
        android:layout_marginRight="8dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/chart_n"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:text="1"
        android:gravity="center"
        android:background="@color/colorGray"
        android:textColor="@android:color/white"/>
    <TextView
        android:id="@+id/chart_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chart_iv"
        android:text="요리 레시피"
        android:textSize="16dp"
        android:fontFamily="@font/cafe24oneprettynight"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"/>
    <TextView
        android:id="@+id/chart_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chart_iv"
        android:layout_below="@id/chart_sub"
        android:text="요리 레시피"
        android:textSize="24dp"
        android:fontFamily="@font/cafe24oneprettynight"
        android:textStyle="bold"
        android:layout_marginHorizontal="16dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chart_civ"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/chart_iv"
        android:layout_marginLeft="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_person_black_24dp"/>
    <TextView
        android:id="@+id/chart_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:layout_toRightOf="@id/chart_civ"
        android:layout_alignBottom="@id/chart_civ"
        android:padding="8dp"/>




</RelativeLayout>